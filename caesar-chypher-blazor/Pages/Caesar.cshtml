@page  "/caesar"

@inherits CaesarBase

<div class="form-group">
    <label for="input-caesar">Input</label>
    <textarea class="form-control rounded-0" id="input-caesar" rows="5" bind="@InputText"></textarea>
</div>
<div class="form-group">
    <label for="key">Shift Key</label>
    <input class="form-control rounded-0" type="number" name="Key" bind="@Key" />
</div>

<div class="form-group">
    <label for="output-caesar">Output</label>
    <textarea class="form-control rounded-0" id="output-caesar" rows="5" bind="@OutputText"></textarea>
</div>
<div>@InputText</div>